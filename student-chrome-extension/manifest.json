{
  "manifest_version": 3,
  "name": "Remote Browser Controller",
  "version": "0.1",
  "description": "Allows remote control of Chrome browser",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}